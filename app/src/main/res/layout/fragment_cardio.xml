<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Timer -->
    <TextView
        android:id="@+id/timerCarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>



    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Start"
        android:scaleType="fitCenter"
        android:src="@drawable/play"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/timerCarText"
        app:layout_constraintEnd_toStartOf="@id/timerCarText"
        app:layout_constraintTop_toTopOf="@id/timerCarText"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="31dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Pause"
        android:visibility="gone"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/timerCarText"
        app:layout_constraintEnd_toStartOf="@id/timerCarText"
        app:layout_constraintTop_toTopOf="@id/timerCarText"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/pause" />

    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Stop"
        android:scaleType="fitCenter"
        android:src="@drawable/stop"
        app:layout_constraintStart_toEndOf="@id/timerCarText"
        app:layout_constraintTop_toTopOf="@id/timerCarText" />

    <!-- Cardio -->
    <TextView
        android:id="@+id/cardioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardio"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/timerCarText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Walking/Running label -->
    <TextView
        android:id="@+id/walkingRunningLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walking/Running"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardioText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Walking/Running Frame with overlay texts -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/walkingRunningFrameContainer"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/walkingRunningLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Background Image fills the ConstraintLayout -->

        <!-- Steps Text -->

        <!-- Minutes Text -->

        <!-- Calories Text -->

        <ImageView
            android:id="@+id/walkingRunningFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/stepsText"
            android:layout_width="69dp"
            android:layout_height="45dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/minutesText"
            android:layout_width="69dp"
            android:layout_height="45dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="260dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/walkingRunningFrame"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Videos label -->

    <!-- See All -->

    <!-- Videos image -->

    <ImageView
        android:id="@+id/videosFrame"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/videos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/videosLabel"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/videosLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Videos"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/walkingRunningFrameContainer" />

    <TextView
        android:id="@+id/seeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="See All"
        android:textColor="#007BFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/videosLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>


