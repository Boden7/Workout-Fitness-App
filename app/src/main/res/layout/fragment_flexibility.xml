<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/flexTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flexibility"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Videos Watched Counter -->
    <TextView
        android:id="@+id/videosWatchedCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Videos Watched: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#444444"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/flexTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Videos Section Title -->
    <TextView
        android:id="@+id/videosLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Videos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/videosWatchedCounter"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- See All -->
    <TextView
        android:id="@+id/seeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See All"
        android:textSize="16sp"
        android:textColor="#007BFF"
        app:layout_constraintTop_toTopOf="@id/videosLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Preview Image -->
    <ImageView
        android:id="@+id/videosFrame"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@drawable/rounded_bg"
        android:padding="10dp"
        android:src="@drawable/videos"
        app:layout_constraintTop_toBottomOf="@id/videosLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
