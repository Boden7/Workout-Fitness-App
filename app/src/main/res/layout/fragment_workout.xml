<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Timer Image Above Timer -->

    <!-- Timer -->
    <ImageView
        android:id="@+id/timerImage"
        android:layout_width="72dp"
        android:layout_height="15dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Timer Image"
        android:src="@drawable/timertext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/timerImage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp" />

    <!-- Container for timer controls -->
    <FrameLayout
        android:id="@+id/timerControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">


        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

        <LinearLayout
            android:id="@+id/pauseStopContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pause"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:paddingLeft="24dp"
                android:paddingRight="24dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Categories Container -->
    <LinearLayout
        android:id="@+id/categoriesContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/timerControls"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp">

        <!-- Cardio -->
        <LinearLayout
            android:id="@+id/categoryCardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/cardio"
                android:contentDescription="Cardio Icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cardiotext"
                android:contentDescription="Cardio Text"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Flexibility -->
        <LinearLayout
            android:id="@+id/categoryFlexibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/flexibility"
                android:contentDescription="Flexibility Icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flexibilitytext"
                android:contentDescription="Flexibility Text"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Strength -->
        <LinearLayout
            android:id="@+id/categoryStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/strength"
                android:contentDescription="Strength Icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/strengthtext"
                android:contentDescription="Strength Text"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Other Activities -->
        <LinearLayout
            android:id="@+id/categoryHIIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/other"
                android:contentDescription="Other Activities Icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/otheratext"
                android:contentDescription="Other Activities Text"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Finish Workout Button at the bottom -->
    <Button
        android:id="@+id/btn_finish_workout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="Finish Workout"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoriesContainer"
        app:layout_constraintVertical_bias="0.135" />

</androidx.constraintlayout.widget.ConstraintLayout>

